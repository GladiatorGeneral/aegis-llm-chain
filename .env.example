# AEGIS LLM Chain - Environment Variables
# Copy this to .env and update with your actual values

# ===========================================
# HuggingFace Configuration (REQUIRED)
# ===========================================
HF_TOKEN=your_huggingface_token_here

# ===========================================
# Application Settings
# ===========================================
ENVIRONMENT=production
LOG_LEVEL=info
API_HOST=0.0.0.0
API_PORT=8000

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/agi_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=agi_platform

# ===========================================
# Redis Configuration
# ===========================================
REDIS_URL=redis://localhost:6379/0

# ===========================================
# Security
# ===========================================
SECRET_KEY=your_secret_key_min_32_chars_long_random_string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_SECRET_KEY=your_jwt_secret_key_here

# ===========================================
# CORS
# ===========================================
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ===========================================
# Frontend Configuration
# ===========================================
FRONTEND_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://api.your-domain.com

# ===========================================
# Models
# ===========================================
MODEL_CACHE_DIR=/app/model_cache
DEFAULT_CHAT_MODEL=Qwen/Qwen2.5-Coder-32B-Instruct
DEFAULT_EMBEDDING_MODEL=BAAI/bge-large-en-v1.5

# ===========================================
# Monitoring & Observability
# ===========================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
PROMETHEUS_PORT=9090

# ===========================================
# Docker Configuration
# ===========================================
DOCKER_USERNAME=your_dockerhub_username
DOCKER_PASSWORD=your_dockerhub_password
