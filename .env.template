# ==================================
# AEGIS LLM CHAIN - Environment Configuration Template
# ==================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================
# SECURITY - CRITICAL: CHANGE THESE VALUES!
# ============================================
# Generate a secure secret key:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_32_BYTE_KEY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Production: Use strong passwords, not 'password'!
DATABASE_URL=postgresql://user:CHANGE_THIS_PASSWORD@localhost:5432/agi_platform

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# HUGGING FACE API
# ============================================
# Get your token from: https://huggingface.co/settings/tokens
HF_TOKEN=your_huggingface_token_here

# ============================================
# API CONFIGURATION
# ============================================
API_V1_STR=/api/v1
PROJECT_NAME=AGI Platform
ENVIRONMENT=development  # development | staging | production

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins
# Development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
# Production example:
# ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# ============================================
# SECURITY SETTINGS
# ============================================
MAX_PROMPT_LENGTH=10000
RATE_LIMIT_PER_HOUR=100
MAX_FILE_UPLOAD_SIZE_MB=10

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR | CRITICAL

# ============================================
# MODEL SETTINGS
# ============================================
MODEL_CACHE_DIR=./model_cache

# ============================================
# DOCKER/PRODUCTION SETTINGS
# ============================================
# PostgreSQL Docker Credentials (CHANGE THESE!)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
POSTGRES_DB=agi_platform

# PgAdmin Credentials (CHANGE THESE!)
PGADMIN_DEFAULT_EMAIL=admin@yourdomain.com
PGADMIN_DEFAULT_PASSWORD=CHANGE_THIS_ADMIN_PASSWORD

# ============================================
# OPTIONAL: ADDITIONAL SECURITY
# ============================================
# Enable HTTPS redirect in production
FORCE_HTTPS=false

# Session configuration
SESSION_TIMEOUT_MINUTES=60

# Enable 2FA (when implemented)
ENABLE_2FA=false
